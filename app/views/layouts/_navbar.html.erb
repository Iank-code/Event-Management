<%= stylesheet_link_tag "navbar" %>

<div class="container">
  <div class="child child-1">
    <h1><%= link_to "Event Management", root_path %></h1>
    <input type="search" class="input" placeholder="Search for books..." />
  </div>

  <div class="child child-2">
    <% if !user_signed_in? %>
      <%= link_to 'Register', new_user_path, class: 'sign_out', method: :post %>
      <%= link_to 'Login', new_session_path, class: 'sign_out', method: :post %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to 'Dashboard', dashboard_index_path,class: 'sign_out',  method: :get %>
      <p>
        Hi <%= CheckCurrentUserJob.perform_now(session[:user_id]).username%>
      </p>
      <%= link_to 'Sign Out', signout_path, class: 'sign_out', method: :delete %>
    <% end %>
  </div>
</div>
